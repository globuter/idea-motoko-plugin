//    ' >>'
//    '<<>'
//    '<>>'
//    '#'

//<relop> ::=
//    '=='
//    '!='
//    ' < '
//    '<='
//    ' > '
//    '>='

private relational_group ::=
    exp_eq
  | exp_neq
  | exp_lt
  | exp_lte
  | exp_gt
  | exp_gte

exp_eq ::=
    exp EQEQ exp

exp_neq ::=
    exp NEQ exp

exp_lt ::=
    exp L_ANGLE exp  // using '<' instead of " < "

exp_lte ::=
    exp LTE exp

exp_gt ::=
    exp R_ANGLE exp  // using '>' instead of " > "

exp_gte ::=
    exp GTE exp

