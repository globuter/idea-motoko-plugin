//    '+='
//    '-='
//    '^='

//<binassign> ::=
//    '+='
//    '-='
//    '*='
//    '/='
//    '%='
//    '**-'
//    '+%='
//    '-%='
//    '*%='
//    '**%='
//    '&='
//    '|='
